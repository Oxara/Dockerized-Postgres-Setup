apiVersion: 1

# Grafana Datasource Configuration Template
# This file shows how to configure PostgreSQL as a Grafana datasource
# Copy this file to grafana-datasources.yml in each environment folder and update the values

datasources:
  - name: PostgreSQL
    type: postgres
    access: proxy
    url: postgres:5432        # Container name and port
    database: postgres_db     # Replace with your database name
    user: postgres_user       # Replace with your PostgreSQL user
    secureJsonData:
      password: your_password # Replace with your PostgreSQL password
    jsonData:
      sslmode: 'disable'      # For local development, 'require' for production
      postgresVersion: 1600   # PostgreSQL version (1600 = 16.0)
      timescaledb: false      # Set to true if using TimescaleDB
    isDefault: true           # Make this the default datasource
    version: 1
    editable: true            # Allow editing in Grafana UI

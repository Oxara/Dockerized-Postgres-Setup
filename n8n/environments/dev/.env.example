# n8n â€” Development Environment
# Copy this file to .env before starting the service:
#   cp .env.example .env

# n8n Web UI host port
N8N_PORT=5678

# n8n host / protocol (used in URLs shown to users)
N8N_HOST=localhost
N8N_PROTOCOL=http

# Webhook base URL (must be publicly reachable in prod)
WEBHOOK_URL=http://localhost:5678/

# Basic auth credentials for the web UI
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=n8n_dev_password

# Encryption key for storing credentials securely
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=change_me_dev_encryption_key_32chars

# Timezone
GENERIC_TIMEZONE=Europe/Istanbul
